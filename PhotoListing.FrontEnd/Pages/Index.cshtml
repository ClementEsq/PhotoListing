@page
@model IndexModel
@{
    ViewData["Title"] = "Photos";
}
<h2>@ViewData["Title"]</h2>
<table id="example" class="table table-condensed table-striped table-hover">
    <thead>
        <tr>
            <th>Photo Title</th>
            <th>Album Name</th>
            <th>Thumbnail</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Photos)
        {
        <tr>
            <td style="padding: 22px;">@item.PhotoTitle</td>
            <td style="padding: 22px;">@item.AlbumName</td>
            <td>
                <a href='@item.LinkUrl'>
                    <img class="img-circle" width="50" height="50" src='@item.Thumbnail' />
                </a>
            </td>
        </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Photo Title</th>
            <th>Album Name</th>
            <th>Thumbnail</th>
        </tr>
    </tfoot>
</table>

<script>$(document).ready(function() {
        $('#example').DataTable();
});</script>